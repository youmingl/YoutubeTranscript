{
    "manifest_version": 3,
    "name": "TranscriptIt",
    "version": "1.0",
    "description": "Generate AI-formatted transcript for youtube video",
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      },
      "content_scripts": [
        {
          "js": ["scripts/contentScript.js"],
          "matches": [
            "*://www.youtube.com/*"
          ],
          "exclude_matches": ["*://*.music.youtube.com/*"]
        }
      ],
      "background": {
        "service_worker": "scripts/background.js"
      },
      "action": {},
      "permissions": [
        "tabs",
        "unlimitedStorage"
      ]
  }